---
const { post, type, channel } = Astro.props
import Artalk from './Artalk.astro'
---

{
  type === 'Telegram' && (
    <div class="comments telegram-comments">
      <script
        is:inline
        async
        src="https://telegram.org/js/telegram-widget.js"
        data-telegram-discussion={`${channel}/${post.id}`}
        data-comments-limit="50"
        data-colorful="1"
        data-color="454545"
      />
    </div>
  )
}

{
  type === 'Artalk' && (
    <div class="comments artalk-comments">
      <Artalk pageKey={post.id} />
    </div>
  )
}
